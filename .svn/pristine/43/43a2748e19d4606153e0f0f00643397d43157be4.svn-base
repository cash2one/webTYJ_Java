<!DOCTYPE>
<html ng-app="ProjectApp">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>项目信息表</title>
</head >
<link type="text/css" rel="stylesheet" href="/Home/css/main.css"/>
<script src="/Home/js/AngularJS/angular-1.2.3.js"></script>
<script src="/Home/js/AngularJS/ProjectController.js"></script>
<body>
<script type="text/ng-template" id="listView">
<table class="main_head" width="100%" border="0" cellpadding="0" cellspacing="0" class="main_table" >
			<tr class="main_head">
				<th>项目id</th>
				<th>项目编号</th>
				<th>项目名称</th>
				<th>公司</th>
				<th>概要</th>
				<th>联系电话</th>
				<th>全地址</th>
				<th colspan="2">操作</th>
			</tr>
					<tr ng-repeat="items in Projects" class="main_head">
						<td>{{items.projectId}}</td>
						<td>{{items.projectNumber}}</td>
						<td>{{ items.projectName}}</td>
						<td>{{items.company}}</td>
						<td>{{items.outline}}</td>
						<td>{{items.phone}}</td>
						<td>{{items.address}}</td>
						<td><a href="#" ng-click="GetProject(items.projectId)" class="myBtn"><em>修改</em></a></td>
						<td><a href="#" ng-click="deleteProject(items.projectId)" class="myBtn"><em>删除</em></a></td>
					</tr>
		</table>
	<div class="page_and_btn">
			<a href="#" ng-click="GetProject(0)" class="myBtn"><em>新增</em></a>
		</div>
</script>
	<script type="text/ng-template" id="AddOrUpdateView">
	<table class="main_head" width="100%" border="0" cellpadding="0" cellspacing="0">
		<tr class="main_head">
			<th>项目编号:</th>
			<td>
				<input type="text" ng-model="project.projectNumber" />
				<input type="hidden" ng-model="project.projectId" /> 
			</td>
			
		</tr>
		<tr class="main_head">
			<th>项目名称:</th>
			<td><input type="text" ng-model="project.projectName"/> </td>
		</tr>

		<tr class="main_head">
			<th>公司:</th>
			<td><input type="text" ng-model="project.company"/> </td>
		</tr>

		<tr class="main_head">
			<th>概要:</th>
			<td><input type="text" ng-model="project.outline"/> </td>
		</tr>

		<tr class="main_head">
			<th>联系电话:</th>
			<td><input type="text" ng-model="project.phone"/> </td>
		</tr>

		<tr class="main_head">
			<th>全地址:</th>
			<td><input type="text" ng-model="project.address"/> </td>
		</tr>

		<tr class="main_head">
			<td colspan="2"><input type="button" value="保存" ng-click="AddOrUpdateProject()"/></td>
		</tr>
		</table>
</script>
<div ng-controller="ProjectCtrl">
	<div ng-include="templateUrl"></div>
</div>
</body>
</html>
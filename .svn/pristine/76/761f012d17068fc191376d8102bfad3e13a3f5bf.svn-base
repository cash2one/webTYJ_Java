<!--页面名称：物业服务装修现场核查流程-->
<!--js: 'controllers/propertyService/staffHome/decorate/verification'-->
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>现场核查</title>
    <script type="text/ng-template" id="top-check">
        <div ng-include="'page/propertyService/staffHome/decorate/decoration/verification/check.html'"></div>
    </script>
    <script type="text/ng-template" id="top-checkFinish">
        <div ng-include="'page/propertyService/staffHome/decorate/decoration/verification/checkFinish.html'"></div>
    </script>
    <script type="text/ng-template" id="top-addCheck">
        <div ng-include="'page/propertyService/staffHome/decorate/decoration/verification/addCheck.html'"></div>
    </script>
</head>
<body ng-controller="verificationCtrl" >
<div style="padding:20px 30px 0">
</div>
<!-- author：gengxiaojiang -->
<!--  -->
<div style="padding:20px 30px 0">
    <div class="col-md-12 text-center" style="margin-bottom:30px;" >
    <!-- author：gengxiaojiang -->
    <!--页面名称：物业服务装修现场核查流程-->
    <!-- modifitime:2015-5-29 -->
        <span class="col-md-4">工单号：{{myitem.orderId}} </span>
        <span class="col-md-4">负责人：{{myitem.inspectionPeople}}</span>
        <span class="col-md-4">预约时间：{{myitem.planDate| date:"yyyy-MM-dd"
        }}</span>
    </div>
    <!-- 修改到此处 -->
     <!-- modifitime:2015-5-29 -->
    <table class="table table-hover text-center">
        <tr>
            <td class="col-md-4"><strong>核查编号</strong></td>
            <td class="col-md-4"><strong>核查事项</strong></td>
            <td class="col-md-4"><strong>核查结果</strong></td>
        </tr>
        <tr ng-repeat="myitems in Verification">
        <td>{{myitems.id}}</td>
        <td>{{myitems.result}}</td>
        <td>{{myitems.items}}</td>
        </tr>
        <tr>
            <td class="col-md-4">ck001</td>
            <td class="col-md-4"><input type="text" ng-model="addVerification.items"></td>
             <td class="col-md-4"><input type="text" ng-model="addVerification.result"></td>
        </tr>
    </table>

    <button type="button" class="btn btn-info" style="margin-left: 300px" ng-click="AddVerification()">保存</button>

    <div >
        <ul class="nav navbar-nav navbar-center">
            <li><a href="javascript:void(0);" ng-click="changeTemplate(0)">企业信息</a></li>
            <li><a href="javascript:void(0);" ng-click="changeTemplate(1)">工作台</a></li>
            <li><a href="javascript:void(0);" ng-click="changeTemplate(2)">工单管理</a></li>
        </ul>
    </div>

    <div class="container-fluid">
        <div class="container-fluid row">
            <div ng-include="currentTemplate"></div>
        </div>
    </div>
</div>
</body>
</html>